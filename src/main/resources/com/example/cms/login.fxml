<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450" prefWidth="500" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cms.controllers.LoginController">

    <children>

        <!-- White Card Container -->
        <AnchorPane layoutX="100" layoutY="80" prefHeight="290" prefWidth="300" style="-fx-background-color: white; -fx-background-radius: 4; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <children>
                <!-- Logo/Title -->
                <Label layoutX="55" layoutY="25" text="Course Management" textFill="#28a745">
                    <font><Font name="Arial Bold" size="20" /></font>
                </Label>

                <Label layoutX="100" layoutY="55" text="Please sign in" textFill="#666666">
                    <font><Font name="Arial" size="13" /></font>
                </Label>

                <!-- Username Field -->
                <TextField fx:id="usernameField" layoutX="25" layoutY="95" prefWidth="250" prefHeight="38" promptText="Username" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-radius: 3; -fx-padding: 8 12; -fx-font-size: 14px;" />

                <!-- Password Field -->
                <PasswordField fx:id="passwordField" layoutX="25" layoutY="145" prefWidth="250" prefHeight="38" promptText="Password" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-radius: 3; -fx-padding: 8 12; -fx-font-size: 14px;" />

                <!-- Login Button -->
                <Button layoutX="25" layoutY="200" onAction="#onLogin" prefWidth="250" prefHeight="40" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 3; -fx-font-size: 15px; -fx-cursor: hand; -fx-border-width: 0;" text="Sign In">
                    <font><Font name="Arial Bold" size="14" /></font>
                </Button>

                <!-- Register Link -->
                <Hyperlink layoutX="75" layoutY="250" onAction="#goToRegister" style="-fx-text-fill: #0066cc; -fx-font-size: 13px; -fx-underline: true;" text="Create new account" />

            </children>

        </AnchorPane>

    </children>
</AnchorPane>