<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350" prefWidth="400" style="-fx-background-color: #e0f2fe;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cms.controllers.RegisterController">

    <children>
        <Label alignment="CENTER" layoutX="158.0" layoutY="40.0" text="Register" textFill="#1e293b">
            <font>
                <Font name="Comic Sans MS" size="24.0" />
            </font>
        </Label>

        <TextField fx:id="usernameField" layoutX="100" layoutY="90" prefWidth="200" promptText="Username" style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #94a3b8; -fx-background-color: rgba(255,255,255,0.9); -fx-padding: 8 12; -fx-focus-color: #3b82f6; -fx-font-family: 'Comic Sans MS'; -fx-font-size: 14px;" />

        <PasswordField fx:id="passwordField" layoutX="100" layoutY="140" prefWidth="200" promptText="Password" style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #94a3b8; -fx-background-color: rgba(255,255,255,0.9); -fx-padding: 8 12; -fx-focus-color: #3b82f6; -fx-font-family: 'Comic Sans MS'; -fx-font-size: 14px;" />

        <PasswordField fx:id="confirmPasswordField" layoutX="100" layoutY="190" prefWidth="200" promptText="Confirm password" style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #94a3b8; -fx-background-color: rgba(255,255,255,0.9); -fx-padding: 8 12; -fx-focus-color: #3b82f6; -fx-font-family: 'Comic Sans MS'; -fx-font-size: 14px;" />

        <Button layoutX="100" layoutY="240" onAction="#onRegister" prefWidth="200" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 16; -fx-font-size: 16px; -fx-font-family: 'Comic Sans MS'; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25),4,0,0,2);" text="Register" />

        <Hyperlink layoutX="112.0" layoutY="289.0" onAction="#goToLogin" style="-fx-text-fill: #3b82f6; -fx-font-family: 'Comic Sans MS'; -fx-font-size: 14px;" text="I already have an account" />
    </children>
</AnchorPane>