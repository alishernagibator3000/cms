<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="500" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cms.controllers.RegisterController">

    <children>

        <!-- White Card Container -->
        <AnchorPane layoutX="100" layoutY="60" prefHeight="380" prefWidth="300" style="-fx-background-color: white; -fx-background-radius: 4; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <children>
                <!-- Logo/Title -->
                <Label layoutX="55" layoutY="25" text="Course Management" textFill="#28a745">
                    <font><Font name="Arial Bold" size="20" /></font>
                </Label>

                <Label layoutX="80" layoutY="55" text="Create new account" textFill="#666666">
                    <font><Font name="Arial" size="13" /></font>
                </Label>

                <!-- Username Field -->
                <TextField fx:id="usernameField" layoutX="25" layoutY="95" prefWidth="250" prefHeight="38" promptText="Username (min 3 chars)" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-radius: 3; -fx-padding: 8 12; -fx-font-size: 14px;" />

                <!-- Password Field -->
                <PasswordField fx:id="passwordField" layoutX="25" layoutY="145" prefWidth="250" prefHeight="38" promptText="Password (min 4 chars)" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-radius: 3; -fx-padding: 8 12; -fx-font-size: 14px;" />

                <!-- Confirm Password Field -->
                <PasswordField fx:id="confirmPasswordField" layoutX="25" layoutY="195" prefWidth="250" prefHeight="38" promptText="Confirm password" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-radius: 3; -fx-padding: 8 12; -fx-font-size: 14px;" />

                <!-- Loading Indicator -->
                <ProgressIndicator fx:id="loadingIndicator" layoutX="135" layoutY="245" prefHeight="30" prefWidth="30" visible="false" />

                <!-- Register Button -->
                <Button layoutX="25" layoutY="250" onAction="#onRegister" prefWidth="250" prefHeight="40" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 3; -fx-font-size: 15px; -fx-cursor: hand; -fx-border-width: 0;" text="Register">
                    <font><Font name="Arial Bold" size="14" /></font>
                </Button>

                <!-- Login Link -->
                <Hyperlink layoutX="50" layoutY="305" onAction="#goToLogin" style="-fx-text-fill: #0066cc; -fx-font-size: 13px; -fx-underline: true;" text="Already have an account? Sign in" />

            </children>

        </AnchorPane>

    </children>
</AnchorPane>